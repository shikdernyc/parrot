{
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": [2, "always"],
        "strict": 0,
        "no-unused-vars": "warn",
        "no-unexpected-multiline": "warn"
    },
    "env": {
        "es6": true,
        "node": true,
        "jest": true,
        "mongo": true,
        "browser": true
    },
    "globals": {
        "exampleGlobalVariable": true
    }
}
